<div class="panel-body">
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label for="retrieveResearchType" class="col-sm-2 control-label">Research:</label>
            <div class="col-sm-3">
                <select class="form-control researchType" id="retrieveResearchType">
                    <option>Ancestors</option>
                    <option>Descendants</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="retrievePersonId" class="col-sm-2 control-label">Name:</label>
            <div class="col-sm-7">
                <div class="input-group">
                    <select class="form-control" id="retrievePersonId"></select>
                    <span class="input-group-btn">
                        <button id="retrieveFindPersonButton" class="btn-u btn-brd btn-brd-hover rounded btn-u-green" data-style="expand-left"><i class="fa fmf-search24 dialog-buttons btn-retrieve-find"></i> Find</button>
                    </span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="retrieveGeneration" class="col-sm-2 control-label">Generations:</label>
            <div class="col-sm-4">
                <div class="input-group addChildren-box">
                    <div id="retrieveGenerationDiv"></div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="retrieveTitle" class="col-sm-2 control-label">Title:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control selectName" id="retrieveTitle" placeholder="Enter description of data to be retrieved">
            </div>
        </div>
        <hr/>
        <div class="row" >
            <div class="text-center">
                <button id="retrieveButton" class="btn-u btn-brd btn-brd-hover rounded btn-u-green" data-style="expand-left"><i class="fa fmf-submit24 dialog-buttons"></i> Retrieve</button>
                <button type='button' id="retrieveResetButton" class="btn-u btn-brd btn-brd-hover rounded btn-u-blue" data-style="expand-left"><i class="fa fmf-reset24 dialog-buttons"></i> Reset</button>
                <button type='button' id="retrieveHelpButton" class="btn-u btn-brd btn-brd-hover rounded btn-u-blue" data-style="expand-left"><i class="fa fmf-help24 dialog-buttons"></i> Help</button>
                <button type='button' id="retrieveCloseButton" class="btn-u btn-brd btn-brd-hover rounded btn-u-blue" data-style="expand-left"><i class="fa fmf-close24 dialog-buttons"></i> Close</button>
            </div>
        </div>        
    </form>
</div>
<div id="retrieveSpinner"/>

<script type="text/javascript">require(['main'], function (main) { require(['retrieveController']); });</script>


    

