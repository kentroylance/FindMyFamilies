<form class="form-horizontal" action=" " method="post" id="featuresform">
        <div class="left-section">
            <img class="row" style="position: relative; top: 90px;" src="/Images/features.png" alt="">
        </div>
    <fieldset>
        <legend>Send Us Your Thoughts</legend>

        <div class="right-section">
            <div class="form-group">
                <div class="col-sm-12">
                    <p>The features is anonymous, so include your email address if you would like a reply.</p>
                </div>
            </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="radio">
                            <label><input type="radio" id="featuresBug" name="optradio">Bug</label>&nbsp;&nbsp;
                            <label><input type="radio" id="featuresFeatureRequest" name="optradio">Feature Request</label>&nbsp;&nbsp;
                            <label><input type="radio" id="featuresOther" name="optradio">Other</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <textarea class="form-control features-textarea" id="featuresMessage" name="message" placeholder="Message"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <input name="email" id="featuresEmail" placeholder="Email Address" class="form-control" type="text">
                    </div>
                </div>
            </div>
</fieldset>
        <div class="col-lg-12">
            <hr />
            <div class="text-center">
                <button id="featuresSubmitButton" class="btn-u btn-brd btn-brd-hover rounded btn-u-green" data-style="expand-left"><i class="fa fmf-submit24 dialog-buttons"></i> Send Features</button>
                <button type='button' id="featuresResetButton" class="btn-u btn-brd btn-brd-hover rounded btn-u-blue" data-style="expand-left"><i class="fa fmf-clean24 dialog-buttons"></i> Clear</button>
                <button type='button' id="featuresCloseButton" class="btn-u btn-brd btn-brd-hover rounded btn-u-blue" data-style="expand-left"><i class="fa fmf-close24 dialog-buttons"></i> Close</button>
            </div>
        </div>
  
</form>

<div id="featuresSpinner" />

<script type="text/javascript">require(['main'], function (main) { require(['featuresController']); });</script>